<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/custom_content_linear_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listBatchTextViewTechnology"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="4"
            android:text="TECHNOLOGY"/>

        <TextView
            android:id="@+id/listBatchTextViewName"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="3"
            android:text="NAME"/>

        <TextView
            android:id="@+id/listBatchTextViewTrainer"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="2"
            android:text="TRAINER"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/listBatchButtonAction"
                android:contentDescription="TODO" android:padding="5dp"
                android:layout_width="30dp"
                android:background="@drawable/custom_button_dehaze"
                android:layout_height="30dp"
                android:src="@drawable/ic_dehaze_black_24dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>